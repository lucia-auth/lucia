---
import { Code } from "astro/components";

import type { Lang, ILanguageRegistration } from "shiki";

type Props = {
	code: string;
	lang: Lang | ILanguageRegistration;
};
---

<Code code={Astro.props.code} lang={Astro.props.lang} theme="min-light" />
<style>
	:global(.astro-code) {
		@apply overflow-scroll !bg-transparent pb-4 !leading-tight;
		scrollbar-width: none;
	}
	:global(.astro-code span) {
		@apply !text-code-sm;
	}
</style>
