---
import { Code } from "astro/components";

type Props = {
	code: string;
	lang: string;
};
---

<Code code={Astro.props.code} lang={Astro.props.lang} theme="min-light" />
<style>
	:global(.astro-code) {
		@apply !bg-transparent overflow-scroll !leading-tight pb-4;
		scrollbar-width: none;
	}
	:global(.astro-code span) {
		@apply !text-code-sm;
	}
</style>
