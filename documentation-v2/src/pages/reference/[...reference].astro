---
import { getSubCollections } from "@content";

import ReferenceLayout from "@layouts/ReferenceLayout.astro";
import MarkdownStyle from "@components/MarkdownStyle.astro";

import type { InferGetStaticPropsType } from "astro";

export const getStaticPaths = async () => {
    const subCollections = await getSubCollections("reference");
    return subCollections
        .map((subCollection) => {
            return subCollection.pages.map((page) => {
                return {
                    params: {
                        reference: [page.subCollectionId, page.pageId].join("/")
                    },
                    props: {
                        subCollection,
                        page
                    }
                };
            });
        })
        .flat();
};

type Props = InferGetStaticPropsType<typeof getStaticPaths>;
const { page } = Astro.props;

const getPageTitle =  () => {
    if (page.title === "Main") return page.subCollectionId;
    if (page.title.startsWith("/")) return `${page.subCollectionId}${page.title}`;
    return `${page.subCollectionId} ${page.title}`;
};
const title = getPageTitle();
---

<ReferenceLayout title={`${title} | Lucia reference`}>
    <div class="mt-6 mb-8">
        <h1 class="text-5xl font-bold" set:html={page.htmlTitle}></h1>
    </div>
    <MarkdownStyle>
        <page.Content />
    </MarkdownStyle>
</ReferenceLayout>
