{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noImplicitAny": true,
		"module": "es2022",
		"moduleResolution": "node",
		"target": "es2022",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"importsNotUsedAsValues": "error"
	},
	"include": ["src"],
	"exclude": ["node_modules/", "**/__tests__/*"]
}
