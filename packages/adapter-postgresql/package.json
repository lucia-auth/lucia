{
	"name": "@lucia-auth/adapter-postgresql",
	"version": "2.0.1",
	"description": "PostgreSQL adapter for Lucia",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.js",
	"type": "module",
	"files": [
		"/dist/",
		"CHANGELOG.md"
	],
	"scripts": {
		"build": "shx rm -rf ./dist/* && tsc",
		"test.pg": "tsx test/pg/index.ts",
		"test.postgres": "tsx test/postgres/index.ts",
		"test.prisma": "tsx test/prisma/index.ts",
		"test-setup.pg": "tsx test/pg/setup.ts",
		"test-setup.postgres": "tsx test/postgres/setup.ts",
		"test-setup.prisma": "prisma db push --schema=test/prisma/schema.prisma",
		"auri.build": "pnpm build"
	},
	"keywords": [
		"lucia",
		"lucia",
		"auth",
		"pg",
		"postgresql",
		"authentication",
		"adapter",
		"sql",
		"kysely",
		"drizzle"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/pilcrowOnPaper/lucia",
		"directory": "packages/adapter-postgresql"
	},
	"author": "pilcrowonpaper",
	"license": "MIT",
	"exports": {
		".": "./dist/index.js"
	},
	"peerDependencies": {
		"lucia": "^2.0.0",
		"pg": "^8.8.0",
		"postgres": "^3.3.0"
	},
	"peerDependenciesMeta": {
		"pg": {
			"optional": true
		},
		"postgres": {
			"optional": true
		}
	},
	"devDependencies": {
		"@lucia-auth/adapter-test": "workspace:*",
		"@prisma/client": "^5.0.0",
		"@types/pg": "^8.6.5",
		"dotenv": "^16.0.3",
		"lucia": "workspace:*",
		"prisma": "^4.9.0",
		"tsx": "^3.12.6"
	},
	"dependencies": {
		"pg": "^8.8.0",
		"postgres": "^3.3.5"
	}
}
