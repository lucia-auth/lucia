{
	"name": "@lucia-auth/adapter-kysely",
	"version": "0.6.2",
	"description": "Kysely adapter for Lucia",
	"main": "index.js",
	"types": "index.d.ts",
	"module": "index.js",
	"type": "module",
	"files": [
		"**/*"
	],
	"scripts": {
		"build": "shx rm -rf ./dist/* && tsc && shx cp ./package.json ./dist && shx cp ./README.md ./dist && shx cp .npmignore dist",
		"test-psql": "npx ts-node --esm -T test/psql/index.ts",
		"test-mysql": "npx ts-node --esm -T test/mysql/index.ts",
		"test-sqlite": "npx ts-node --esm -T test/sqlite/index.ts",
		"auri.publish": "pnpm build && cd dist && pnpm publish --no-git-checks --access public && cd ../"
	},
	"keywords": [
		"lucia",
		"kysely",
		"lucia-auth",
		"mysql",
		"sqlite",
		"postgres",
		"postgresql",
		"auth",
		"authentication",
		"adapter"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/pilcrowOnPaper/lucia",
		"directory": "packages/adapter-kysely"
	},
	"contributors": [
		"Blastose",
		"pilcrowonpaper"
	],
	"license": "MIT",
	"exports": {
		".": "./index.js"
	},
	"peerDependencies": {
		"lucia-auth": "0.7.x"
	},
	"devDependencies": {
		"@lucia-auth/adapter-test": "workspace:*",
		"@types/better-sqlite3": "^7.6.3",
		"@types/pg": "^8.6.5",
		"better-sqlite3": "^8.0.1",
		"dotenv": "^16.0.3",
		"mysql2": "^2.3.3",
		"ts-node": "^10.9.1",
		"kysely": "^0.23.4"
	},
	"dependencies": {
		"lucia-auth": "workspace:*",
		"pg": "^8.8.0"
	}
}
