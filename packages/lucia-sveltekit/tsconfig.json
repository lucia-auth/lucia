{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": true,
        "module": "es2022",
        "moduleResolution": "node",
        "target": "es2022",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules/", "**/__tests__/*"],
    "extends": "./.svelte-kit/tsconfig.json",
    "paths": {
        "$lib": ["src"],
        "$lib/*": ["src/*"]
    }
}
