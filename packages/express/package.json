{
	"name": "@lucia-auth/express",
	"version": "0.1.2",
	"description": "Lucia integration for Express",
	"main": "index.js",
	"types": "index.d.ts",
	"module": "index.js",
	"type": "module",
	"files": [
		"**/*"
	],
	"scripts": {
		"build": "shx rm -rf ./dist/* && tsc && shx cp ./package.json ./dist && shx cp ./README.md ./dist && shx cp .npmignore dist",
		"package": "pnpm build && cd dist && pnpm install --no-frozen-lockfile && pnpm publish --no-git-checks --access public && cd ../"
	},
	"keywords": [
		"lucia",
		"authentication",
		"lucia-auth",
		"node",
		"auth",
		"express",
		"node",
		"expressjs"
	],
	"exports": {
		"./package.json": "./package.json",
		".": "./index.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pilcrowOnPaper/lucia-auth",
		"directory": "packages/express"
	},
	"author": "pilcrowonpaper",
	"license": "MIT",
	"devDependencies": {
		"@types/express": "^4.17.14",
		"lucia-auth": "workspace:*"
	}
}
