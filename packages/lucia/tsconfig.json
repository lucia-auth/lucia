{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noImplicitAny": true,
		"module": "ES2022",
		"moduleResolution": "node",
		"target": "ES2022",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"isolatedModules": false
	},
	"include": ["src"],
	"exclude": ["node_modules/", "**/__tests__/*", "**/*.test.ts"]
}
