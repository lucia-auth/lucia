{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": true
	},
	"package": {
		"productName": "app",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"shell": {
				"open": true
			},
			"http": {
				"request": true,
				"scope": [" http://localhost:3000/*"]
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.tauri.dev",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "app",
				"width": 800,
				"height": 600
			}
		]
	}
}
